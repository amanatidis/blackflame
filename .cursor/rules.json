{
  "rules": [
    {
      "pattern": "**/*.{ts,tsx}",
      "exclude": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/.expo/**"],
      "language": "typescript",
      "formatter": "prettier"
    },
    {
      "pattern": "**/*.{js,jsx}",
      "exclude": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/.expo/**"],
      "language": "javascript",
      "formatter": "prettier"
    },
    {
      "pattern": "**/*.css",
      "language": "css",
      "formatter": "prettier"
    },
    {
      "pattern": "**/*.json",
      "language": "json",
      "formatter": "prettier"
    },
    {
      "pattern": "**/*.mdc",
      "language": "markdown"
    },
    {
      "pattern": "**/app.json",
      "language": "json",
      "formatter": "prettier"
    },
    {
      "pattern": "**/babel.config.js",
      "language": "javascript"
    },
    {
      "pattern": "**/tsconfig.json",
      "language": "json",
      "formatter": "prettier"
    }
  ]
} 